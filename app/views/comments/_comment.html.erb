<%= div_for(comment) do %>
<div class="visible-desktop hidden-phone hidden-tablet">
<div class="boxtwo">
<div class="newspaper2">

<% if comment.questions.count == 1 %>
<div class="info7">
<%= comment.questions.count %> Answer
</div>
<% else %>
<div class="info7">
<%= comment.questions.count %> Answers
</div>
<% end %>

<div class="questioncontainer">
<%= link_to (comment.body), comment_questions_path(comment) %>
</div>




<% if comment.questions.count > 0 %>


<div class="lightcontainer7">
Last 1 of <%= comment.questions.count %><br>
</div>
<%= comment.questions.last.try(:[],:body)[0,200] %>
<%= link_to "(read more...)", comment_questions_path(comment), class: "blue"  %>



<% else %>


<div class="blue2">
No one has answered yet <br>
<%= link_to "Write the first answer", new_comment_question_path(comment, @question), class: "blue" %>
</div>


<% end %>

</div>
</div>
</div>


<div class="visible-phone visible-tablet">
<div class="span12">
<div class="row">


