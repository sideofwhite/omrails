<% @comments.each do |comment| %>
<div class="visible-desktop hidden-phone hidden-tablet">
<div class="boxtwo">
<div class="newspaper2">

<% if comment.questions.count == 1 %>
<div class="info7">
<%= comment.questions.count %> Answer
</div>
<% else %>
<div class="info7">
<%= comment.questions.count %> Answers
</div>
<% end %>

<div class="questioncontainer">
<%= link_to (comment.body), post_comment_questions_path(@post, comment) %>
</div>




<% if comment.questions.count > 0 %>


<div class="lightcontainer7">
Last 1 of <%= comment.questions.count %><br>
</div>
<%= comment.questions.last.try(:[],:body)[0,200] %>
<%= link_to "(read more...)", post_comment_questions_path(@post, comment), class: "blue"  %>



<% else %>


<div class="blue2">
No one has answered yet <br>
<%= link_to "Write the first answer", new_post_comment_question_path(comment, @question), class: "blue" %>
</div>


<% end %>

</div>
</div>
</div>


<div class="visible-phone visible-tablet">
<div class="span12">
<div class="row">


<% if comment.questions.count == 1 %>
<div class="info7">
<%= comment.questions.count %> Answer
</div>
<% else %>
<div class="info7">
<%= comment.questions.count %> Answers
</div>
<% end %>

<div class="questioncontainer">
<%= link_to (comment.body), post_comment_questions_path(@post, comment) %>
</div>


<% if comment.questions.count > 0 %>


<div class="count"> 
<div class="lightcontainer7">
Last 1 of <%= comment.questions.count %><br>
</div>
<%= comment.questions.last.try(:[],:body)[0,200] %>
<%= link_to "(read more...)", post_comment_questions_path(@post, comment), class: "blue"  %>
</div>

<% else %>


<div class="blue2">
No one has answered yet <br>
</div>

<% if user_signed_in? %>
<%= link_to "write the first answer", new_post_comment_question_path(comment, @question), class: "blue" %>
<% else %>
<%= link_to "write the first answer", new_user_registration_path, class: "blue" %>

<% end %>
<% end %>


<hr/>
</div>
</div>
</div>


