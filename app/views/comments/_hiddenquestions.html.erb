
<div class="row" style='margin-bottom: 35px;'></div>
<% @hidden.each_with_index do |question, i| %>
<div id="question_<%= question.id %>">


<div class="largename">
<%= link_to (question.user.name), user_path(question.user), class: "blue" %>
</div>  

<div class="answertitle">
<%= question.title %>
</div>


<div class="row" style='margin-top: 20px;'></div>

<div class="smallavatarfeednomargin2">
<%= link_to (image_tag(question.user.image)), user_path(question.user) %>
</div>

<div class="large-image">
<%= sanitize question.body_format %>
</div>

<% if i == i %>
<style media="screen">
  p { margin: 0px !important;}
  p img { width: 100% !important; margin: 10px 10px 10px 0px;}
</style>
<% end %>

<div class="datecenter" style="margin-bottom: 15px;">
  <%= time_ago_in_words(question.created_at) %> ago
  <% if current_user == question.user or current_user.try(:admin?) %>
    â€¢ <%= link_to "Edit", edit_comment_question_path(question.comment, question) %>
  <% end %>
</div>




<div class="row"></div>

<% if user_signed_in? %>

<% if current_user.voted_for? question %>
 <div class="clicked">
   + <div style="display: inline;opacity: 0.3;">|</div> Upvoted
 </div>
<% else %>

<%= link_to upvote_comment_question_path(question.comment, question), class: "hoverblueupvote", remote: true, method: :put do %>
 <div class="upvotebutton2-<%= question.id %>">
   + <div style="display: inline;opacity: 0.3;">|</div> Upvote
 </div>
<% end %>

 <div class="clicked-<%= question.id %>" style="display: none;">
   + <div style="display: inline;opacity: 0.3;">|</div> Upvoted
 </div>
<% end %>

<% else %>

<%= link_to new_user_registration_path do %>
<div class="upvotebutton2">
  + <div style="display: inline;opacity: 0.3;">|</div> Upvote
</div>

<% end %>
<% end %>



<% if question.votes.count == 0 %>
<div class="answersnumber">
  No upvotes yet
</div>
<% elsif question.votes.count == 1 %>
 <div class="answersnumber">
  <% question.votes.by_type(User).voters.each do |user| %>
  <%= link_to (user.name), user_path(user), class: "blue" %>
  <% end %> upvoted this.
 </div>
 <% elsif question.votes.count == 2 %>
  <div class="answersnumber">
  <% question.votes.by_type(User).voters.limit(1).each do |user| %>
  <%= link_to (user.name), user_path(user), class: "blue" %>,
  <% end %> and 1 other upvoted this.
 </div>
<% else %>
 <div class="answersnumber">
  <% question.votes.by_type(User).voters.limit(2).each do |user| %>
  <%= link_to (user.name), user_path(user), class: "blue" %>,
  <% end %> and <%= pluralize(question.cached_votes_total - 2, "other") %> upvoted this.
 </div>
<% end %>



<div class="row"></div>


 
<div class="commentwidth"> 

  
<% if question.links.present? %>

<hr class="linelinks"/>
 <% question.links.limit(1).each do |link| %>
   <%= render :partial => 'firstcomment', locals: {link:link} %>
 <% end %>

<% end %>

<div class="row"></div>


<% if question.links.count > 1 %>
  <div class="add-first-reply <%= question.id %>">
    See more...
  </div>
<% end %>

<% if user_signed_in? %>

<% if question.links.count == 1 %>
  <div class="add-first-reply <%= question.id %>">
    Add a reply...
   </div>
<% elsif question.links.count == 0 %>
  <div class="see-all-replies <%= question.id %>">
    Add the first comment...
  </div>
<% end %>


<% else %>

<% if question.links.count == 1 %>
  <div class="add-first-reply">
    <%= link_to "Login to write a reply", new_user_session_path, class: "blue" %>
   </div>
<% elsif question.links.count == 0 %>
  <div class="commentdescriptiontext" style="margin-top: 25px; color: rgba(51,51,51,0.5);">
Have a question or a comment on his answer? <%= link_to "Login to write a reply", new_user_session_path, class: "blue" %>
</div>
<% end %>

<% end %>











<div class="menu-<%= question.id %>" style="display: none;">
  <div class="twenty"></div>
 <div id="linkmama-<%= question.id %>">
   <%= render :partial => 'newlink', locals: {question:question} %>
  </div>
  <div id="linkformmama-<%= question.id %>">
    <%= render :partial => "links/form", locals: {question:question} %>
  </div>
</div>

</div>

<% unless (i + 1) == @hidden.count %>
<hr/>
<% end %>



<script>

$(document).ready(function() {
        $('.<%= question.id %>').click(function() {
               
                $('.menu-<%= question.id %>').toggle();
                $('.<%= question.id %>').hide();
                
                
        });

   $('.cancelslideup').click(function() {
    $('.menu').slideUp("fast");
    $('.eventtoptext3').show();

     }); 
    }); 

$(document).ready(function(){
    $('.showbuttons-<%= question.id %>').click(function(){
        $('.hiddenbuttons').toggle();
    });
}); 

$(document).ready(function() {
        $('.upvotebutton2-<%= question.id %>').click(function() {
                $('.clicked-<%= question.id %>').show();
                $('.upvotebutton2-<%= question.id %>').hide();
                $('.commenttextbeside-<%= question.id %>').hide();
                $('.commenttextbesideblue-<%= question.id %>').show();
                
        });
    }); 



</script>


 <style media="screen">
  .clicked-<%= question.id %> {   
    display: inline-block;
   background: rgba(51,51,51,0.03) !important;
   border: 1px solid rgba(51,51,51,0.1);
    padding: 9px 14px 8px 14px;
   font-weight: bold;
   font-size: 12px;
   color: rgba(51,51,51,0.5) !important;
   border-radius: 1px;
   text-shadow: none !important;
   float: left;
   margin-right: 15px;

   
} 
  .upvotebutton2-<%= question.id %> {   
 
   display: inline-block;
   background: rgba(1,139,198,0.1) !important;
   border: 1px solid rgba(1,139,198,0.5);
    padding: 9px 14px 8px 14px;
   font-weight: bold;
   font-size: 12px;
   color: #018bc6 !important;
   border-radius: 1px;
   text-shadow: none !important;
   float: left;
   margin-right: 15px;
   
   
 } 


   .upvotebutton2-<%= question.id %>:hover {  
    
     
    

  }

  .commenttextbeside-<%= question.id %> {    font-size: 11px;
    display: inline-block;
    line-height: 27px !important;
    opacity: 0.5;
    float: left;
    margin-right: 15px;}
  .commenttextbesideblue-<%= question.id %> { font-size: 11px;
    display: inline-block;
    line-height: 27px !important;
    color: #018BC6 !important;
    float: left;
    margin-right: 15px;} 

</style>   



</div>

<% end %>
