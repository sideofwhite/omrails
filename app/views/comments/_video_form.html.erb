<div class="post-form-nav">
<%= link_to current_user.name, user_path(current_user), class: "post-form-nav-name" %>	

<div id="step1-video">

<div class="form-head">
Video
</div>
<div class="form-head-light">
Caption
</div>

</div>


<div id="step2-video" style="display: none;">

<div class="form-head-light">
Video
</div>
<div class="form-head">
Caption
</div>

</div>



</div>


<div class="row"></div>



<%= simple_form_for [@post, Comment.new], url: post_comments_path(@post)  do |f| %>
<%= f.hidden_field :user_id, :value => current_user.id %>

<div id="video-url">
<%= f.input :video_url, as: :text, input_html: { :class => "post-form", :maxlength => 140 }, label: false ,placeholder: "Paste a Youtube URL" %>

<div class="submitbluemodal" id="video-caption-next">
Next
</div>

</div>


<div id="video-caption" style="display: none;">
<%= f.input :video_url, as: :text, input_html: { :class => "post-form", :maxlength => 140 }, label: false ,placeholder: "Short video description" %>
<%= f.submit "Post", class: "submitbluemodal" %>
</div>



<div class="row"></div>






<% end %>


<div class="row"></div>

<script>

$("#video-caption-next").click(function(){
    $("#video-url").hide();
    $("#video-caption").show();
    $("#step2-video").show();
    $("#step1-video").hide();
});





</script>