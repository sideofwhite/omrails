
<div class="center">
<div class="circlemobile">
<%= link_to (image_tag(@comment.user.image)), user_path(@comment.user) %>
</div>


<%= link_to @comment.user.name, user_path(@comment.user) %> 
</div>



<div class="span12">


<div class="titlecontainer">
<%= @comment.title %>
</div>

<%= simple_format(@comment.body) %>


<%= image_tag @comment.image %>
 <div class="newspaper4">
 <div class="body">
 <div class="italic">
Caption
</div>
</div>
</div>


<div class="lightcontainer6">
 Posted <%= time_ago_in_words(@comment.created_at) %> ago <br>
</div>


<% if user_signed_in? %>
<%= link_to ("Favourite"), upvote_post_comment_path(@post, @comment), class: "favouritebutton" %>
<% else %>
<%= link_to ("Favourite"), new_user_registration_path, class: "favouritebutton" %>
<% end %>

<div class="readmorepadding">
<div class="grey">
Read more
</div>
</div>

<hr/>


<% @comments.each do |comment| %>


<div class="underline"></div> 

  <div class="titlecontainerb">
  <%= link_to (comment.title), post_comment_path(@post, comment) %>
</div>

<div class="lightcontainer7">
<%= comment.title %>
</div>
<%= comment.body[0,200] %>
<%= link_to "(read more...)", post_comment_path(@post, comment), class: "blue"  %>

<hr/>


<% end %>



<div class="eventimage">
<%= link_to (@comment.post.title), post_path(@comment.post), class: "titlecontainershow" %>  
 <style media="screen">
  .eventimage::after { background-image: url(<%= @comment.post.image %>); background-size: cover;}
 </style>

</div>


</div>
