<h1>Listing comments</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>User</th>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.post_id %></td>
        <td><%= comment.user_id %></td>
        <td><%= comment.title %></td>
        <td><%= comment.subtitle %></td>
        <td><%= comment.body %></td>
        
        
      </tr>
    <% end %>
  </tbody>
</table>

