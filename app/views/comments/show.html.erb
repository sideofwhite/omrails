<% if @comment.post.pictures.present? %>
<style media="screen">
 .imagestrip { background-image: url(<%= @comment.post.pictures.first.image %>); }
</style>
<% end %>



 <div class="imagestrip">
  <div class='darker'></div>
   <div class="absoluteheader">
     <%= render 'layouts/headerimage' %>
   </div>

<% if current_user.try(:admin?) %>
  <%= link_to edit_post_comment_path(@comment.post, @comment) do %>
    <i class="fa fa-pencil-square-o"></i>
  <% end %>
<% end %>

<% if @comment.published %>
<% if user_signed_in? %>  
  <div id="logged-in" class="bluecircle white">+</div>
<% else %>  
<div class="bluecircle white" id="login-recommend-add">+</div>
<% end %>
<% end %>

<div class="absolutecontainer">
 <div class="relativecontainer">
  <div class="descriptionmargin"> 

   <div class="eventimagepreviewtext">
     <%= link_to (@comment.post.title), post_path(@comment.post), class: "whiteblue" %>
   </div>

    <hr class="whiteimageline"/>

    
     <% if @comment.events.present? %>
      <%= link_to (@comment.events.first.title), post_event_path(@comment.post, @comment.events.first), class: "eventlinkdark" %>
      <% end %>

   </div>
  </div>
 </div>


</div>

<div class="width6">



<div style="display: inline-block; float: right; margin-top: 10px; border-left: 1px solid rgba(51,51,51,0.1); padding-left: 20px; margin-left: 30px;">

<% if user_signed_in? %>
<div class="submit-share">
Share
</div>  
<% else %>
<div class="submit-share" id="share-signin">
Share
</div> 
<% end %>



<% if user_signed_in? %>

<% if current_user.voted_for? @comment %>
<div class="submitblue-small-clicked">
Following
</div>
<% else %>

<div id="<%= @comment.id %>" style="display: inline;">
<%= link_to upvote_post_comment_path(@comment.post, @comment), remote: true, method: :put do %>
 <div class="submitblue-small" id="follow-<%= @comment.id %>">
   Follow
 </div>
<% end %>
</div>
 <div class="submitblue-small-clicked" style="display: none;" id="followed-<%= @comment.id %>">
Following
</div>
<% end %>

<% else %>
<div class="submitblue-small" id="login-recommend-add">
   Follow
 </div>
<% end %>
</div>




 <div class="titlecontainer">
  <%= @comment.title %>
 </div>




<div class='row'></div>

<hr style="margin-bottom: 10px; margin-top: 10px;"/>



<div class="under-question-info">
<% if @comment.published %>
<div class="dividerhead" style="margin-bottom: 3px;">
<%= pluralize(@published.count, 'Answer').upcase %>
</div>
<% else %>
<div class="dividerhead" style="margin-bottom: 3px;">
0 ANSWERS
</div>
<div class="unpublished-box" style='width: 100%; margin-top: 15px;'>
<div class="blue">Locked Question</div>
<div style="margin-top: 5px"></div>
This question has not been reviewed by editors to confirm it follows Podium's <%= link_to "question guidelines", guidelines_path, class: "blue" %>.
</div>
<% end %>  
</div>


<% if @comment.info.present? %>
<div class="under-question-info">

<div class="dividerhead" style="margin-bottom: 0px;">
QUESTION INFO
</div>

<div class="questionsdetailsbox-show">


    
  <% if @comment.info.length > 130 %>
    <%= truncate(@comment.info, length: 130) %>
    <%= link_to 'More', '', class: "blue" %>
    <script>
      $('.read-more-<%= @comment.id %>').on('click', function(e) {
        e.preventDefault()
        $(this).parent().html('<%= escape_javascript @comment.info %>')
      })
    </script>
  <% else %>
    <%= @comment.info %>
  <% end %>



<%= link_to  url_for(@comment.link), :target => "_blank" do %>
<i class="fa fa-link"></i>
<% end %>
 

</div>
</div>

<% end %>



<div class="row"></div>

<div class="answer-feed-margin"></div>


<% if @comment.published and @published.blank? %>
<div class="half-width">
<hr class="line30" style="margin-top: 20px; margin-bottom: 10px;"/>
<div class="timeline-date" style="margin-bottom: 17px; color: #018bc6;">
Share question on Twitter
</div>

<div class="welcome-twitter-share">
<%= @comment.title %>
</div>


<%= link_to "http://twitter.com/home?status=[Tagline here]. Check out Podium at readpodium.com", :target => "_blank" do %>
<div class="submitblue-small" style="float: right;">
<i class="fa fa-twitter-square" style="font-size: 13px;"></i> Tweet
</div>
<% end %>
<div class="row"></div>
</div>
<% end %>





<div id="products" data-no-turbolink>
  <%= render 'comments/questions' %>
</div>

<%= will_paginate @questions %>





<% if @hidden.present? %>
<hr class="dividerline"/>

<div class="unpublished-box">
<%= link_to unpublished_path(@comment), :remote => true, class: "unpublished-link", data: { disable_with: "Loading..." } do %>



Unreviewed Answers (<%= @hidden.count %>)

<% end %>
<div style="margin-top: 5px"></div>
These answers have not been reviewed by editors to confirm they follow Podium's <%= link_to "answer guidelines", guidelines_path(:anchor => "answers"), :target => "_blank", class: "blue" %>.
</div>


<div id="unpublished">
</div>
<div class="row"></div>
<% end %>


<% if @related.where("comments.id NOT IN (?)", @comment.id).present? %>
<hr class="dividerline"/>
<div class="dividerhead">
RELATED ANSWERS
</div>
<% @related.where("comments.id NOT IN (?)", @comment.id).limit(2).each do |question| %>
<%= render :partial => 'layouts/answersfeed', locals: {question:question} %>
<hr style="width: 30%;"/>
</div>
<% end %>

<% end %>

</div>


<% if @questions.count > 0 or @related.where("comments.id NOT IN (?)", @comment.id).present? %>
<div class="imagestrip" style="height: 150px; margin-top: 60px;">
  <div class='darker'></div>
  <div class="absolutecontainer">
 <div class="relativecontainer">
  <div class="descriptionmargin" style="margin-bottom: 25px; margin-right: 0px;"> 

   <div class="eventimagepreviewtext">
     <%= link_to (@comment.post.title), post_path(@comment.post), class: "whiteblue" %>
   </div>

    <hr class="whiteimageline"/>


   </div>
  </div>
 </div>

</div>

<% else %>

<div class="sixty"></div>

<% end %>







<div class="fullpage-modal-container"> 

  <div class="fullpage-modal" style="display: none;">
<button type="button" class="close-modal-slide" data-dismiss="modal" aria-hidden="true">×</button>
<hr class="modalline-slide" style="margin-top: 0px"/>
<%= render :partial => "pages/answerguidelines", :object => @comment %>
</div>
</div>

<script>
   $(document).ready(function() {
        $('#follow-<%= @comment.id %>').click(function() {
                $('#followed-<%= @comment.id %>').show(); 
                 $('#follow-<%= @comment.id %>').hide();
        });
    }); 
</script>


<% if user_signed_in? %>

<div class="blue-slider-position">

<div class="share-social" style="display: none;">
   <div class="blue-slider">
    <button type="button" class="close-twitter" data-dismiss="modal" aria-hidden="true">×</button>
    <div class="infopage-boldtext" style="font-size: 14px; color: rgba(255,255,255,1);">
Share Question
</div>
<div class="infopage-smalltext" style="font-size: 12px; margin-bottom: 20px; color: rgba(255,255,255,0.5);">
Share to Facebook and Twitter
</div>
<div style="text-align: center">
   <%= link_to "http://twitter.com/home?status=#{@comment.title} readpodium.com#{post_comment_path(@comment.post, @comment)}", :target => "_blank" do %>
    <i class="fa fa-twitter" style="color: white; font-size: 34px; display: inline-block; margin-right: 15px;"></i>
   <% end %>
   <%= link_to "http://www.facebook.com/sharer.php?u=URL", :target => "_blank" do %>
   <i class="fa fa-facebook-square"></i>
   <% end %>
   </div>
 </div>
 </div>

</div>


<% else %>





 <div class="blue-slider-position">

<div class="login-recommend-add-div" style="display: none;">
   <div class="blue-slider">
    <button type="button" class="close-twitter" data-dismiss="modal" aria-hidden="true">×</button>
    <%= render :partial => "devise/sessions/new" %>
   </div>
 </div>

</div>


<% end %>


<script>

$('#logged-in.bluecircle, #logged-in.dividerheadinline, .close-modal-slide').click(function () {
        $('.fullpage-modal').toggle('slide', {
            direction: 'top'
        }, 300);
    });

</script>

<script>
$('.submit-share, .close-twitter').click(function () {
        $('.share-social').toggle('slide', {
            direction: 'right'
        }, 300);
    });

$('#login-recommend-add, .close-twitter, .recommend-logged-out, #share-signin').click(function () {
    if($('.login').is(':visible')){
    $('.login').fadeOut(function () {
        $('.login-recommend-add-div').toggle('slide', {
            direction: 'right'
        }, 300);
    });
    }
    else{
        $('.login-recommend-add-div').toggle('slide', {
            direction: 'right'
        }, 300, function(){ $('.login').fadeIn();});
    }
});





</script>


