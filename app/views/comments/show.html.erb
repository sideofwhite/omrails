<div class="visible-desktop hidden-phone hidden-tablet">

<div class="container">
 <div class="row">


<div class="span1">
<div class="circle">
<%= link_to (image_tag(@comment.user.image)), user_path(@comment.user) %>
</div>
<hr/>
<div class="center">
<%= link_to @comment.user.name, user_path(@comment.user) %> 
</div>



</div>




<div class="span7">

<div class="titlecontainer">
<%= @comment.title %>
</div>


<%= simple_format(@comment.body) %>




<div class="lightcontainer6">
 Posted <%= time_ago_in_words(@comment.created_at) %> ago <br>
</div>





<%= image_tag @comment.image %>
 <div class="newspaper4">
 <div class="body">
 <div class="italic">
Caption
</div>
</div>
</div>

<% if user_signed_in? %>
<%= link_to ("Favourite"), upvote_post_comment_path(@post, @comment), class: "favouritebutton" %>
<% else %>
<%= link_to ("Favourite"), new_user_registration_path, class: "favouritebutton" %>
<% end %>

<% if current_user.try(:admin?) %>
<div class="underanswercontainer2">
<%= link_to 'Edit', edit_post_comment_path(@post, @comment) %>
<%= link_to 'Delete', post_comment_path(@post, @comment), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<% end %>

<div class="paddingtop"></div>


<div class="grey">
Questions
</div>


<hr/>


<% @questions.each do |question| %>
<%= question.body %>
<div class="lightcontainer6b">
<%= time_ago_in_words(question.created_at) %> ago <br>
</div>

<%= question.answers.count %>

<% if current_user == @comment.user %>
<%= render :partial => "answers/form" %>
<% end %>


<% end %>

<%= render :partial => "questions/form" %>

<div class="readmorepadding">
<div class="grey">
Read more
</div>
</div>

<hr/>

 

 <div id="pin" class="transitions-disabled">
<% @comments.each do |comment| %>
 <div class="boxtwo">
<div class="newspaper2">

<div class="underline"></div> 

  <div class="titlecontainerb">
  <%= link_to (comment.title), post_comment_path(@post, comment) %>
</div>

<div class="lightcontainer7">
<%= comment.title %>
</div>
<%= comment.body[0,200] %>
<%= link_to "(read more...)", post_comment_path(@post, comment), class: "blue"  %>

</div>
</div>

<% end %>
</div>

<div class="viewall">
<%= link_to 'View All', post_path(@comment.post) %>
</div>



</div>

<div class="span3 offset1">
<div class="eventimage">
<%= link_to (@comment.post.title), post_path(@comment.post), class: "titlecontainershow" %>  
 <style media="screen">
  .eventimage::after { background-image: url(<%= @comment.post.image %>); background-size: cover;}
 </style>


 </div>

</div>







</div>
</div>
</div>


<div class="visible-phone hidden-desktop hidden-tablet">
<%= render 'comments/showphone' %>
</div>



 
