<div class="visible-phone hidden-desktop hidden-tablet">
<%= render 'comments/showmobile' %>
</div>
<div class="visible-tablet hidden-desktop hidden-phone">
<%= render 'comments/showtablet' %>
</div>

<div class="visible-desktop hidden-phone hidden-tablet">

<div class="container">
<div class="row"> 


<div class="span1 offset1">
<div class="circle">
<%= link_to (image_tag(@comment.user.image)), user_path(@comment.user) %>
</div>
<div class="namepadding">
<strong><%= link_to @comment.user.name, user_path(@comment.user) %></strong>
</div>
</div>

<div class="span7">
<div class="container">
<div class="row"> 
<div class="span4"> 
<div class="greysubtitle"> 	
<%= @comment.subtitle %>
</div>
</div>

<div class="span2">

</div>
</div>
</div>

<hr/>


<div class="titlecontainer">
<%= @comment.title %>
</div>


<%= simple_format(@comment.body) %>

<% if @comment.image? %>
<%= image_tag @comment.image %>
 <div class="newspaper4">
 <div class="body">
 <div class="italic">
Caption
</div>
</div>
</div>
<% end %>

<div class="paddingtop"></div>

<div class="container">
<div class="row"> 
<div class="span2">
<% if user_signed_in? %>
<%= link_to ("Push"), upvote_post_comment_path(@post, @comment), class: "favouritebutton" %>
<% else %>
<%= link_to ("Push"), new_user_registration_path, class: "favouritebutton" %>
<% end %>
</div>
<div class="span5">
<div class="floatright">
<div class="lightcontainer6">
 Posted <%= time_ago_in_words(@comment.created_at) %> ago <br>
<% if current_user.try(:admin?) %>
<%= link_to 'Edit', edit_post_comment_path(@post, @comment) %>
<%= link_to 'Delete', post_comment_path(@post, @comment), method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>

<% if @comment.user == current_user %>
<%= link_to 'Edit', edit_post_comment_path(@post, @comment), class: "lightcontainer6" %>
<%= link_to 'Delete', post_comment_path(@post, @comment), method: :delete, data: { confirm: 'Are you sure?' }, class: "lightcontainer6" %>
<% end %>
</div>
</div>
</div>

</div>
</div>

<div class="paddingtop"></div>
<hr/>

<div class="span5">
<div class="paddingtop"></div>
<div class="row"> 

<div class="commentquestion">
<%= @comment.questions.count %> Questions
</div>

<%= render :partial => "questions/form" %>

<% @questions.each do |question| %>
<% if question.answer.present? %>

<div class="commentquestion">
<%= question.body %>
</div>
<div class="commentquestionanswer">
<%= question.answer.body %>
</div>
<% else %>

<% end %>


<% end %>
<div class="greybio">
<%= link_to ("Unanswered questions"), comment_questions_path(@comment) %>
</div>
</div>
</div>
</div>

<div class="span3">
<div class="eventimage"> 
<%= image_tag @comment.post.image %>
<%= link_to (@comment.post.title), post_path(@comment.post), class: "titlecontainershow" %> 
</div>
</div>	




</div>
</div>







 
