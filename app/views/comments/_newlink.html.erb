<div class="width6">
<div class="inlineborderfeed" style="margin-top: 30px;">
<div class="commentwidth">	
	





<% question.links.each do |link| %>
<div class="whitesquarecomment">	
<div class="smallavatar3">
<%= link_to (image_tag(link.user.image)), user_path(link.user) if link.user.present? %>
</div>


<div class="commentdescriptiontext">
<div class="commentdescriptionname">	
<%= link_to (link.user.name), user_path(link.user), class: "blue" if link.user.present? %>	
</div>
</div>

<div class="commentdescriptiontext" style="color: rgba(51,51,51,0.75);">
<div>
 <% if link.description.length > 230 %>
    <%= truncate(link.description, :separator => ' ', length: 230) %>
    <%= link_to_function ("Read More"), "$(this).parent().html('#{escape_javascript link.description}')", class: "readmorecomment" %>
  <% else %>
    <%= link.description %>
  <% end %>
</div>

<div class="date3">
<%= time_ago_in_words(link.created_at) %> ago
</div>
<% if current_user == link.user %>

<div class="date3">|</div> <%= link_to "Delete", question_link_path(link.question, link), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' }, class: "date3" %>
<% end %>
</div>



</div>
<hr style="margin-bottom: 15px !important; margin-top: 15px !important; width: 100px; margin-left: 45px;" />


<% end %>



</div>
</div>
</div>


