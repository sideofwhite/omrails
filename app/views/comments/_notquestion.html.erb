

<div class="width7">
<hr/>
<div class="width5">



<%= render :partial => 'layouts/text_post', locals: {comment:@comment} %>





<% if @related.present? %>
<hr class="dividerline"/>
<div class="dividerhead">
Related Posts
</div>
<% @related.each do |comment| %>
<%= render :partial => "layouts/#{comment.feed}_post", locals: {comment:comment} %>
<% end %>

<% end %>




</div>


<div class="width2" style="margin-top: 5px;">

<div class="small-avatar-feed-test">
<%= image_tag(@comment.user.image) %>
</div>
<div style="font-size: 16px; margin-bottom: 4px; padding-top: 13px; color: #0882d1; font-weight: bold;">
<%= link_to (@comment.user.name), user_path(@comment.user), class: "blue" %>
</div>
<div style=" font-size: 14px; opacity: 0.5;">
<%= time_ago_in_words(@comment.created_at) %> ago
</div>

<div class="row"></div>

<hr style="margin-top: 15px; margin-bottom: 15px"/>

<i class="material-icons" style="font-size: 16px; color: rgba(51,51,51,0.5); margin-right: 10px; font-weight: bold; margin-bottom: 10px; float: left;">check</i>

<div style="display: inline-block; font-size: 12px; color: #0882d1; line-height: 20px;">
Nevan Whiteside <div style="display: inline; color: rgba(51,51,51,0.5);">and 3 others</div>
</div>
</div>





</div>
