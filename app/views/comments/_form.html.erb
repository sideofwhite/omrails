<div class="span7 centered">

<%= simple_form_for [@post, Comment.new] do |f| %>
<%= f.hidden_field :user_id, :value => current_user.id %>

<div class="eventtoptext">
<%= link_to (@post.title), post_path(@post) %>
</div>

<hr/>


<div class="circle">
<%= link_to (image_tag(current_user.image)), user_path(current_user) %>
</div>

<div class="attemt">

<div class="nameblueside2">
<%= link_to current_user.name, user_path(current_user) %>
</div>


<%= f.input :title, as: :text, input_html: { rows: "1", :class => "hello" }, label: false,placeholder: "Title" %>


<%= f.input :body, as: :text, input_html: { rows: "1", :class => "hello3 inputBody", :style => "margin-bottom: 20px;" }, label: false, placeholder: "Description" %>


<div class="underbutton2"></div> 
<%= f.submit "Post", class: "favouritebutton myButton" %>
</div>
 <% end %>

</div>


<script>
function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            
            reader.onload = function (e) {
                $('#blah').attr('src', e.target.result);
            }
            
            reader.readAsDataURL(input.files[0]);
        }
    }
    
    $("#user_image").change(function(){
        readURL(this);
    });

</script>