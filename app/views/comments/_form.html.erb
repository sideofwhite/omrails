<%= simple_form_for [@post, Comment.new] do |f| %>
 <p>
<div class="form">
  <%= f.input :body, as: :text, input_html: { rows: "5", :style=> 'width: 85%', :class => "create" }, label: false,placeholder: "Add Question" %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  

   
 </p>
 <p><%= f.submit "Ask Question", class: "btn btn-primary" %></p>
 </div>
 <% end %>
