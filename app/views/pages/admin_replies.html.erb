<div class="width6">


<div class="notificationcount-text" style="font-size: 16px; margin-top: 35px;">
New Replies
</div>
<hr/>


<% @replies.limit(1).each do |link| %>

<div class="timeline-dot">
</div>

<div class="timeline-content" style="width: 100%;">

<div style="width: 70%">


<div class="notification-smalltext">
<%= link_to ("#{link.question.user.name}'s"), user_path(link.question.user), class: "blue" %> answer to <%= link_to (link.question.comment.title), post_comment_path(link.question.comment.post, link.question.comment), class: "blue" %>
</div>

</div>

<div class="row" style="margin-top: 15px;"></div>



<div class="commentwidth-notification">

<div class="smallavatar3">
  <%= link_to (image_tag(link.user.image(:thumb))), user_path(link.user) %>
</div>


<div class="commentdescriptionname">  
  <%= link_to (link.user.name), user_path(link.user), class: "blue" %>
</div>


<div class="commentdescriptiontext">
<div>
<%= link.description %>
</div>

<div class="date3">
<%= time_ago_in_words(link.created_at) %> ago
</div>

<% if current_user == link.user %>
<div class="date3">â€¢</div> <%= link_to "Delete", question_link_path(link.question, link), method: :delete, data: { confirm: 'Delete this comment?' }, class: "date3" %>
<% end %>
</div>


</div>



</div>


<% end %>


</div>