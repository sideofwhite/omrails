<div class="visible-tablet hidden-phone hidden-desktop">

<div class="span10 centered">
<% @posts.each do |post| %>
<div class="titlecontainershowtablet">
<%= link_to (post.title), post_path(post)%> 
</div>

<% if post.comments.count > 0 %>
<div class="postinterviewmargintop">
<% post.comments.limit(2).each do |comment| %>
<% if comment.user.present? %>
<div class="postinterviewtext">
<strong><%= link_to (comment.user.name), post_comment_path(comment.post, comment) %></strong>
<% if post.comments.count > 1 %>
,
<% elsif post.comments.count == 1 %>

<% end %>
</div>
<% end %>
<% end %>

<% if post.comments.count > 2 %>

<div class="postinterviewtext"%>
and <%= post.comments.count - 2 %> others are answering questions
</div>
<% elsif post.comments.count == 2 %>
<div class="postinterviewtext"%>
are answering questions
</div>
<% elsif post.comments.count == 1 %>
<div class="postinterviewtext"%>
is answering questions
</div>
<% end %>

</div>
<% else %>

<% end %>

<div class="eventimagetoptablet">
<%= image_tag post.image %>
</div>

<% end %>
</div>


</div>