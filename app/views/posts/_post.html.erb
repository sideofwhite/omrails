<% @posts.each_with_index do |post, i| %>



<% if @posts.current_page == 1 and i == 0 %>





<% if post.pictures.present? %>
<div class="experimentstrip" style="background-image: url(<%= post.pictures.last.image %>);">
<% else %>
<div class="experimentstrip">
<% end %>

<div class="darker"></div>

<% if user_signed_in? %>

<div class="absoluteheader">
<%= render 'layouts/headerimage' %>
</div>

<% if current_user.try(:admin?) %>
<%= link_to admin_path do %>
<i class="fa fa-bars"></i>
<% end %>
<% end %>

<div class="absoluteheader" style="margin-left: 148px; width: 80%;">
<%= render 'layouts/headercategories' %>
</div>

<% else %>


<div class="absoluteheader">
<%= render 'layouts/headercategories' %>
</div>

<% end %>






<div class="absolutecontainer">
<div class="relativecontainer">
<div class="descriptionmargin-story"> 


<div class="titletextunderneath">
  <%= pluralize(post.comments.count, "Question") %> | <%= pluralize(post.questions.count, "Answer") %>
</div>
<div class="posttext2">
  <%= link_to (post.title), post_path(post), class: "white" %> 
</div>



   </div>
 </div>
</div>

</div>






<% else %>

<%= link_to post_path(post) do %> 

<% if post.pictures.present? %>
<div class="experimentstrip" style="background-image: url(<%= post.pictures.last.image %>); height: 350px; margin-top: 50px;">
<% else %>
<div class="experimentstrip" style="height: 300px; margin-top: 50px;">
<% end %>


<div class="darker"></div>

<div class="absolutecontainer">
<div class="relativecontainer">
<div class="descriptionmargin-story"> 

<% if post.event == true %>
<div class="answersnumberbox">
  <%= pluralize(post.events.first.questions.count, "Answer") %> 
</div>
<div class="posttext2">
  <%= post.events.first.title %> 
</div>
<% else %>
<div class="titletextunderneath">
  <%= pluralize(post.comments.count, "Question") %> | <%= pluralize(post.questions.count, "Answer") %>
</div>
<div class="posttext2" style="font-size: 34px;">
  <%= post.title %> 
</div>
<% end %>


   </div>
  </div>
 </div>
</div>




<% end %>

<% end %>





<div class="width6">

<div style="margin-bottom: 30px !important;"> 
</div>  

<div class="p3">  
<%= truncate(post.description, :separator => ' ', length: 150) %>
</div>

<div style="padding-top: 10px "></div>
<div class="row"></div>
<div class="linklogoimage">
<%= image_tag (post.image) %>
</div>
<%= link_to (post.domain), url_for(post.link), :target => "_blank", class: "readmore", style: "color: #333 !important; opacity: 0.5; float: left; line-height: 24px;" %>
<div class="row"></div>


</div>


<% if post.questions.where(:hide => true, :recommend => true).present? %>

<hr class='dividerline'/>

<div class="width6">
<div class="dividerhead">
ANSWERS
</div>


<% post.questions.where(:hide => true, :recommend => true).limit(2).each_with_index do |question, i| %>


  <%= render :partial => 'layouts/answersfeed', locals: {question:question} %>
  
  <% unless (i + 1) == post.questions.where(:hide => true, :recommend => true).limit(2).count %>
  <hr style="margin-bottom: 15px;"/>
  <% end %>
  

<% end %>

<%= link_to post_path(post) do %>
<div class="go-story">
Go to story
</div>
<% end %>

<div class='row'></div>


</div>


<% end %>




<% end %>




