<% Post.order("cached_votes_total desc").each do |post| %>
<div class="padding2">
<div class="container">
 <div class="row">
  
  <div class="span1">
    <div class="blue">
<div class="q">
<strong><%= post.comments.count %></strong> Q 
</div>
</div>
</div>  
  

<div class="span5">  
  <div class="description">
  <%= link_to (post.title), post %>
  </div>  
  <div class="subtitle">
   <%= post.description.split[0..15].join(" ") %>... 
   </div>
   <div class="description2">
    <%= time_ago_in_words(post.created_at) %> ago 
    </div>
    <% if post.comments.count > 0 %>
   <hr/>
   <div class="lightcontainer2">
  Top Question 
  </div>
  <div class="count">
  <%= link_to (post.comments.last.try(:[],:body)), comment_questions_path(post.comments.last) %>
  </div>
   <% else %>
   <%= link_to ('Ask the first question'), new_post_comment_path(post, @comment), class: "first" %>
   <% end %>
   </div>
   

   <div class="span4">
  <%= image_tag post.image(:medium), class: "float-right" %>    
   </div>

</div>

</div>
</div>


<% if current_user.try(:admin?) %>
<div class="span10 offset1">
<div class="underanswercontainer2">
<%= link_to "Upvote", upvote_post_path(post) %>
<%= link_to 'Edit', edit_post_path(post) %>
<%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
<div class="span2 offset12">
<%= link_to image_tag('http://i.imgur.com/uSmWLvL.png'), new_post_path %>
</div>
</div>
</div>
<% end %>
<% end %>






