<% @posts.order("created_at desc").each do |post| %>
<div class="visible-desktop hidden-phone hidden-tablet">
<div class="box panel panel-default">



<div class="newspaper">

<div class="description">
<%= link_to (post.title), post, class: "description" %>
</div>
<div class="lightcontainer">
<%= time_ago_in_words(post.created_at) %> ago
</div>

<%= image_tag post.image(:small) %>
 
<div class="panel-body">

<% if post.comments.count == 1 %>

<div class="info6">
<%= post.comments.count %> Question
</div>
<% else %>

<div class="info6">
<%= post.comments.count %> Questions
</div>

<% end %> 





<% if post.comments.count > 0 %>

<% else %>
<div class="lightcontainer11">
<hr/>
<%= link_to 'Ask the first question', new_post_comment_path(post) %>
</div>
<% end %>

<% post.comments.order('created_at desc').limit(3).each do |comment| %>
<div class="fontsize16">
<div class="newspaper10">
<%= link_to (comment.body), post_comment_questions_path(post, comment) %>
</div>
</div>

<% end %>

<% if post.comments.count > 3 %>
<div class="viewallposts">
<%= link_to "View all", post  %>
</div>
<% else %>

<% end %>

</div>
</div>
</div>


<% if current_user.try(:admin?) %>
<div class="underanswercontainer2">
<%= link_to "Upvote", upvote_post_path(post) %>
<%= link_to 'Edit', edit_post_path(post) %>
<%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<% end %>
</div>




<div class="visible-phone visible-tablet">
<div class="span8">
<div class="newspaperm">

<div class="description">
<%= link_to (post.title), post %>
</div>
<div class="lightcontainer">
<%= time_ago_in_words(post.created_at) %> ago
</div>

<%= image_tag post.image(:small) %>
 
<% if post.comments.count == 1 %>

<div class="info6">
<%= post.comments.count %> Question
</div>
<% else %>

<div class="info6">
<%= post.comments.count %> Questions
</div>

<% end %> 

<% if post.comments.count > 0 %>

<% else %>
<div class="lightcontainer11">
<hr/>
<%= link_to 'Ask the first question', new_post_comment_path(post) %>
</div>
<% end %>

<% post.comments.order('created_at desc').limit(2).each do |comment| %>
<div class="count">
<div class="newspaper10">
<%= link_to (comment.body), post_comment_questions_path(post, comment) %>
</div>
</div>

<% end %>


</div>
</div>
</div>





<% end %>




