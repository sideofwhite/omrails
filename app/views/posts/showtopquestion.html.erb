<% unless @post.pictures.count == 0 %>
<style media="screen">
  .imagestripquestions { background-image:  url(<%= @post.pictures.last.image %>); background-color: #333; }
  </style>
<% end %>
<style media="screen">
  .navbar .brand {color: white !important;} 
  .headtext {color: white !important;} 
  .navbar .nav > li > a {color: white !important;} 
  .fa-bell-o { color: white !important;}

  .alert-danger { opacity: 1 !important; color: white !important;}
</style>


<div class="imagestripquestions">

