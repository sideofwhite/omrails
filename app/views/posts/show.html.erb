<div class="visible-phone hidden-tablet hidden-desktop">
<%= render 'posts/showmobile' %>
</div>

<div class="visible-tablet hidden-phone hidden-desktop">
<%= render 'posts/showtablet' %>
</div>

<div class="visible-desktop hidden-phone hidden-tablet">

<div class="row">
<div class="span8 offset2">
<div class='titlecontainershow'>
<%= @post.title %> 
</div>
<hr7/>
</div>
</div>

<div class="container">
<div class="row">
<div class="span6 offset2">
<div class="descriptionmargin">	
<p>
<%= @post.description %>
<p/>
</div>
</div>
<div class="span2">
<div class="timeright">
<strong><%= @post.country %></strong> 	
</div>
<div class="timeright">
<%= time_ago_in_words(@post.created_at) %> ago
</div>
<div class="floatright">
<% if user_signed_in? %> 
<%= link_to 'Be Interviewed', new_post_comment_path(@post), class: "favouritebutton" %>
<% else %>
<%= link_to 'Be Intervied', new_user_registration_path, class: "favouritebutton" %>
<% end %>
</div>	

</div>
</div>
</div>

<div class="aboveimage2"></div>

<div class="row">
<div class="span8 offset2">

<div class="eventimage">
<%= image_tag @post.image %> 
</div>

<div class="span7 centered">
<%= render 'comments/comment' %>
</div>

</div>
</div>
























 

