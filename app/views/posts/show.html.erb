</p>
</div>



<% if @answers.present? %>
Answers
<div id="products">
<%= render 'comments/answers_feed' %>
</div>
<%= will_paginate @answers %>
<% end %>

<%= render 'questions_banner' %>



<div class="width5-center">
<% if @related.present? %>
<%= render 'posts/relatedstories' %>
<% end %>
</div>


<% unless user_signed_in? %>
<div class="prompt-banner">
<div class="width5-center">
Sign up to see more great stories and experience all of Flipboard.
<div class="actionable-buttons sign-in-prompt" id="signin-click">Sign Up</div>
</div>
</div>
<% end %>






<%# modals %>


<div class="modal-custom" id="submitpost-modal" style="display: none;">
<i class="material-icons close-modal-button" id="close-post-modal">close</i>
<% if user_signed_in? %>
<%= render 'comments/form' %>
<% end %>
</div>

<div class="modal-custom" id="sharestory-modal" style="display: none;">
<i class="material-icons close-modal-button" id="close-share-modal">close</i>
</div>


<div class="modal-custom" id="signin-modal" style="display: none;">
<i class="material-icons close-modal-button" id="close-signin-modal">close</i>
<%= render 'layouts/sign_in' %>
</div>







<script>

$('#addstory-icon').click(function () {
  $('#submitpost-modal').show();
 });

$('.arrow-up-next').click(function () {
  $('#choose-post-type').show();
  $('#post-guidelines').hide();
 });

$('#close-post-modal').click(function () {
  $('#submitpost-modal').hide();
  $('#choose-post-type').hide();
  $('#post-guidelines').show();
 });


 $('#sharestory-icon').click(function () {
  $('#sharestory-modal').show();
 });


  $('#signin-click').click(function () {
  $('#signin-modal').show();
 });
 $('#close-signin-modal').click(function () {
  $('#signin-modal').hide();
 });

  
  
 $('#close-share-modal').click(function () {
  $('#sharestory-modal').hide();
 });


 $(document).ready(function() {
        $('#showmenu').click(function() {
               
                $('.menu').slideDown("fast");
                $('.eventtoptext3').hide();
                
                
        });

   $('.cancelslideup').click(function() {
    $('.menu').slideUp("fast");
    $('.eventtoptext3').show();

     }); 
    }); 


$(document).ready(function() {
        $('#bookmark-click').click(function() {
                $('#bookmark-clicked').show(); 
                 $('#bookmark-click').hide();
        });
    }); 



</script>


 

