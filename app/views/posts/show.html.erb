<div class="container">
 <div class="row">
<div class="span4 offset1">
  <%= image_tag @post.image(:medium) %>    
 </div>
<div class="span6">
<div class="titlecontainer">
<%= @post.title %>
</div>
<div class="info">
<%= time_ago_in_words(@post.created_at) %> ago <br>
<%= @post.country %>
</div>

<div class="descriptioncontainer2">
<%= @post.description %>
</div>
</div>
</div>
</div>

<div class="row">


<div class="span10 offset1">
<hr />
<div class="questioncontainer3">  

<%= link_to 'Ask Question', new_post_comment_path(@post), class: "button2" %>
</div>
<div class="number2">
<%= @post.comments.count %> Questions 
</div>

</div>



<%= render :partial => @post.comments %>









 





















 

