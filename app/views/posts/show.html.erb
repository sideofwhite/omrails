


<style media="screen">
  .experiment { background-image:  url(<%= @post.image %>); background-color: #333; }
  .navbar .brand {color: white !important;opacity: 1 !important;} 
  .headtext {color: white !important;} 
  .navbar .nav > li > a {color: white !important;} 
  .fa-bell-o { color: white !important;}
  .alert-danger { opacity: 1 !important; color: white !important;}
</style>




<div class="experiment">

<div class="darker"></div>
<div class="absoluteheader">
<%= render 'layouts/headerimage' %>

</div>

<% if current_user.try(:admin?) %>
<%= link_to edit_post_path(@post) do %>
<i class="fa fa-cog"></i>
<% end %>

<% end %>


<div class="absolutecontainer">
<div class="relativecontainer">	


<div class="posttext2">
<%= @post.title %> 
</div>
<div class="descriptionmargin">	 
<%= @post.description %>
<div class='linkinline'>
<%= link_to (@post.domain), url_for(@post.link), :target => "_blank", class: "white" %>
</div>
<div class="imagewhitedate">
<%= time_ago_in_words(@post.created_at).capitalize %> ago
 </div>  
</div>


<div class="row"></div>


<div class="width30">
<div class="questionnavbar50">
Top Answers
</div>
</div>
<div class="width30">
<div class="questionnavbar51">	
<%= link_to "Top Questions", topquestions_path, class: "questionnavbarlink" %>
</div>
</div>
<div class="width30">
<div class="questionnavbar51">	
<%= link_to "New Questions", newquestions_path, class: "questionnavbarlink" %>
</div>
</div>



</div>
</div>
</div>



<div class="width6">




<%= render 'posts/belowimage' %>








</div>
<%= render 'comments/commenttwo' %>


<div class="width6">
<div class="topanswershome"  style="margin-bottom: 30px;">
<%= link_to "Top Questions", topquestions_path(@post), class: "navbarlink" %>
</div>
<div class="mobilepadding20"></div>
<% @post.comments.order('comments.questions_count desc').limit(3).each do |comment| %>
<div class="question75">

<div class="padding1075">
<div class="titlecontainer20">
<%= link_to (comment.title), post_comment_path(@post, comment) %>
</div>
<div class="date4" style="margin: 7px 0px 0px 0px;">
Asked <%= time_ago_in_words(comment.created_at) %> ago
</div>
</div>

</div>

<div class="question25">
<div class="question25border">    
<% if comment.questions.count > 0 %>

<div class="nameblueside3" style="margin: 0px 0px 10px 0px; font-size: 12px; color: rgba(51,51,51,0.5) !important;">
<%= "Answer".pluralize(comment.questions.count) %> from...
</div>
<% comment.questions.limit(3).each do |question| %>
<div class="feedimagetopquestion">
<%= image_tag question.user.image %>
</div>
<% end %>
<% if comment.questions.count > 3 %>
<div class="plusmore">
+<%= comment.questions.count - 3 %>
</div>
<% end %>
<% else %>

<% end %>
<div class="row"></div>
</div>
</div>


<div class="row"></div>

<hr class="commentfeedline"/>

<% end %>

<% if @post.comments.count > 3 %>
<%= link_to "See all...", topquestions_path(@post), class: "seeallleft" %>
<% end %>


</div>

<div class="sixty"></div>


<script>
 $(document).ready(function() {
        $('#showmenu').click(function() {
               
                $('.menu').slideDown("fast");
                $('.eventtoptext3').hide();
                
                
        });

   $('.cancelslideup').click(function() {
    $('.menu').slideUp("fast");
    $('.eventtoptext3').show();

     }); 
    }); 



</script>














 

