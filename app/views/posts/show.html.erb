<div class="sidebar-profile-nav">



<% if @post.image.present? %>
<div class='home-feed-image' style="background-image: url(<%= @post.image %>);">
</div>
<% end %>

<div class="sidebar-nav-inner" style="padding: 13px 20px 0px 20px;">
<% if @post.pictures.present? %>
<div class="linklogoimage-large">
<%= image_tag (@post.pictures.first.image) %>
</div>
<% end %>

<div class="article-info-text">
<%= link_to (@post.domain), url_for(@post.link), :target => "_blank" %>
</div>
<div class="article-info-text" style="margin-left: 10px; opacity: 0.7; font-weight: 400;">
<%= time_ago_in_words(@post.created_at) %> ago 
</div>


<div class="row"></div>

<hr style="margin-top: 15px; margin-bottom: 10px;"/>

<div class="row"></div>
</div>

<div class="sidebar-nav-inner">


<div class="story-title" style="padding-top: 0px;">
<%= @post.title %>
</div>

<div class="card-description">
<%= @post.description %>
</div>
<div class="actionable-clicks" id="sharestory-icon" style="margin-top: 20px; float: none; display: inline-block;">
Full Story
</div>

<div class="row"></div>




</div>
</div>




<div class="navbar-profile-content-container">

<div class="width5-center-large">

<div class="story-title-small">
<%= @post.title %>
</div>


<%= link_to question_form_post_url(@post), :remote => true do  %>
<div id="bluecircle-small">

</div>
<% end %>

<% if user_signed_in? %>
<% if current_user.voted_for? @post %>
<div class="actionable-clicks" id="bookmark-clicked">
Following
</div>
<% else %>
<%= link_to upvote_post_path(@post), remote: true, method: :put do %>
<div class="actionable-clicks" id="bookmark-click">
Follow
</div>
<% end %>
<div class="actionable-clicks" id="bookmark-clicked" style="display: none;">
Following
</div>
<% end %>
<% else %>
<div class="actionable-clicks" id="login-recommend-add">
Follow
</div>
<% end %>


<div class="actionable-clicks" id="sharestory-icon" style="margin-right: 10px;">
Share
</div>
<div id="addstory-icon">
+ Question
</div>

<div class="row"></div>



<hr style="margin-top: 0px; margin-bottom: 35px;"/>
</div>

