<% if current_user.try(:admin?) %>


<div class="descriptionaddevent">
<div class="red">
Add Event
</div>
</div>
<hr/>


   <%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
  <%= f.full_error :image_content_type, class: "alert alert-error" %>

   <p><%= f.input :title, as: :text, input_html: { rows: "3", :style=> 'width: 95.7%',:class => "create2" },label: false, placeholder: "Event Headline" %></p>
   <p><%= f.input :description, as: :text, input_html: { rows: "5", :style=> 'width: 95.7%',:class => "create2" }, label: false, placeholder: "Summary of the event"%></p>
 


<%= f.input :country, as: :text, input_html: { rows: "1",:style=> 'width: 95.7%',:class => "create" }, label: false, placeholder: "Location" %>
<%= f.label :tag_list, label: false %>
  <%= f.input :tag_list, as: :text,  input_html: { rows: "2", :style=> 'width: 95.7%',:class => "create" }, label: false, placeholder: "World, United States, Politics, Technology, Science" %>
<%= f.input :image, label: "Add Image" %>
  <%= f.input :image_remote_url, as: :text,  input_html: { rows: "1", :style=> 'width: 95.7%',:class => "create" }, label: false, placeholder: "Or a URL" %>

 <%= f.submit "Add Event", class: "button5" %>
  <div class="cancel">
  <%= link_to ("Cancel"), posts_path %>
</div>

 <% end %>

<% else %>

This page doesn't exist


<% end %>









