

<div class="titlecontainer30">
<%= link_to (question.comment.title), post_comment_path(question.comment.post, question.comment), class: 'blue' %>
</div>


<div class="hidden-phone" style="display: inline;">
<div class="questioninfo-container">
	
 <div style="float: right;"> 	
<% if question.comment.questions.count > 1 %>
<i class="fa fa-align-left"></i> 
1 of <%= question.comment.questions.count %> Answers
<% else %>
Asked <%= time_ago_in_words(question.comment.created_at) %> ago
<% end %>
 </div>
</div>
</div>

<div class="row" style="margin-top: 15px;"></div>



<div class="small-image">
<%= sanitize(question.body.gsub(/<p>.<\/p>/,"").truncate(200, separator: ' ')) %>
</div>

<div class="row" style="margin-top: -7px;"></div>

<div class="answer-feed-avatar">
<%= link_to (image_tag(question.user.image)), user_path(question.user) %>
</div>

<div style="font-size: 1em; line-height: 34px;">
<%= link_to (question.user.name), user_path(question.user), class: "blue" %> 
<div style="display: inline; color: rgba(51,51,51,0.4);">
<%= link_to ("â€¢ Continue reading"), comment_question_path(question.comment, question) + "#question_#{question.id.to_s}", style: "color: rgba(51,51,51,0.5) !important;" %>	
 <i class="fa fa-long-arrow-right"></i>
</div>
</div>






