


<div class="p2">
<%= simple_format comment.body %>
</div>



<%= render :partial => "layouts/#{comment.feed}_post", locals: {comment:comment} %>

<div class="row"></div>

<div style="background: #7CB342; padding: 6px 9px; border-radius: 1px; font-size: 12px; color: #fff; display: inline-block; box-shadow: 1px 1px 1px 0px rgba(51, 51, 51, 0.1); font-weight: bold; float: left; margin-right: 15px;">
<i class="material-icons" style="font-size: 16px; color: #fff; margin-right: 5px; font-weight: bold; float: left;">check</i> <div style="line-height: 16px; display: inline;">Recommend</div>
</div>



<div class="row"></div>
<hr class="feed-line"/>



<div class="row"></div>


<div class="hidden">
<div class="share-answer">
<div style="text-align: center">

<div class="feed-info-text">
<%= link_to (comment.user.name), user_path(comment.user), style: "color: rgba(51,51,51,.75) !important;" %>
<div style="margin-top: 3px;">
<%= link_to URI.parse( comment.link ).host, url_for(comment.link), :target => "_blank", style: "font-weight: 300; color: rgba(51,51,51,0.75) !important;" %>
</div>
</div>

</div>
</div>
</div>


<script>
$(document).ready(function() {
        $('#add-<%= comment.id %>').click(function() {
                $('#added-<%= comment.id %>').show(); 
                 $('#add-<%= comment.id %>').hide();
        });
    }); 

$(function ()  
{
  
  $('.info-icon').popover(
  {
     trigger: 'click',
     html: true,
     placement: 'top',
     content: $('.share-answer').parent().html()
  });
});

</script>