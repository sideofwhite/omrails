<head> <meta charset="utf-8"> 
<link href="/css/bootstrap.css" rel="stylesheet"> 
<link href="/css/bootstrap-responsive.css" rel="stylesheet"> 
<script src="/js/jquery.js"></script>
<script src="/js/bootstrap-modal.js"></script>
</head>


<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-header">
<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
</div>

<div class="modal-body">
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form'}) do |f| %>

  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :remember_me, as: :boolean, input_html: { :class => "pull-left" }, label: "Remember me" %>
</div>
 
    <div class="modal-footer">
    <%= f.submit "Sign in", class: "button5" %>
   <div class="return">
    <%= link_to "Forgot your password?", new_user_password_path(resource_name), class: "red" %>
   </div>
   </div>
  


<% end %>
</div>