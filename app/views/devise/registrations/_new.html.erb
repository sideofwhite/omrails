

<div class="px300">

 <div class="twitterlogin">
<i class="fa fa-twitter"></i> 	
<%= link_to "Sign up with Twitter", user_omniauth_authorize_path(:twitter), class: "white" %>
</div>


 <div class="or">
or with email
</div> 	
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
 

  <%= f.input :name, input_html: { :class => "hello4" }, label: false,placeholder: "Full Name" %>
  <%= f.input :email, input_html: { :class => "hello4" }, label: false,placeholder: "yourname@example.com" %>

  <%= f.input :password, input_html: { :class => "hello4" }, label: false,placeholder: "Password" %>
  <%= f.input :password_confirmation, input_html: { :class => "hello4" }, label: false, placeholder: "Password"%>
<div class="paddingtop">
</div>
<div class="lightcontainer">
By clicking "Sign Up" you indicate that you have read <br> and agree to the Terms of Service.
</div>	

<div class="center">
<%= f.submit "Sign Up", class: "favouritebuttonmodal" %>
</div>

</div>
<% end %>

