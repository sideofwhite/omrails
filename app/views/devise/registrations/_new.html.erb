</div>
</div>

 <%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter), class: "headerbutton" %>

<div class="redborder">
<form class="form-signin"
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form'}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>

  
    <%= f.submit "Sign Up", class: "button5" %>
  
</div>

<% end %>

