<div class="container">
<div class="row">




<div class="span5 offset1">
<div class="floatright">
<%= link_to "Logout", destroy_user_session_path, method: :delete, class: "button5" %>
</div>

<div class="container">
<div class="row">

<div class="span4">
<div class="redborder2">
<div class="logotext">
Edit Profile
</div>
</div>

<div class="redborder">

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: 'form' }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :email %>

  <%= f.input :password, label: "New Password", autocomplete: "off" %>
  <%= f.input :password_confirmation, label: "New Password Confirmation", autocomplete: "off" %>
  <%= f.input :current_password %>

 
    <%= f.submit "Update", class: "button5"%>
 </div> 
<% end %>

</div>
</div>
</div>
</div>
</div>
</div>
</div>
