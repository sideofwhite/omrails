<div class="span2 centered">   


<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put}) do |f| %>
  <%= f.error_notification %>

<div class="userimage3">
<div class="addimage">
<%= f.input :image, input_html: { :style => "opacity:0;"  }, label: false %>
</div>
<img id="blah" />
</div>
<div class="usernameback">  
<%= current_user.name %>
</div>  
<hr/>
<%= f.input :twitter, as: :text, input_html: { rows: "1", :class => "hellobio" }, label: false,placeholder: "Short Bio" %>
<div class="mobilepadding5"></div>
<%= f.input :place, as: :text, input_html: { rows: "1", :class => "hellobio2" }, label: false,placeholder: "Location" %>
</div>





</div>

<div class="span10 centered">
<hr/>
<div class="center">
<div class="paddingtop">
<div class="titlecontainer">
Complete your profile
</div>
</div>
<div class="center">  
<%= f.submit "Done", class: "fullorange"%>
</div>
</div>
</div>

<% end %>
<script>
function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            
            reader.onload = function (e) {
                $('#blah').attr('src', e.target.result);
            }
            
            reader.readAsDataURL(input.files[0]);
        }
    }
    
    $("#user_image").change(function(){
        readURL(this);
    });

</script>