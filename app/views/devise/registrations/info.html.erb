<div class="span5 offset2">

<div class="logotext">
Profile
</div>
This information appears on your public profile.

<hr/>


<form class="form-horizontal">
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put}) do |f| %>
  <%= f.error_notification %>


<%= f.input :image, label: "Profile Image" %>


<hr/>

<%= f.input :place, label: "Location" , placeholder: "Where do you live?" %>

<%= f.input :age, label: "Age" ,placeholder: "How old are you?" %>

<hr/>

<%= f.input :twitter, label: "Have Twitter?" ,placeholder: " Your Twitter handle?" %>

<hr/>

<%= f.submit "Done", class: "button5"%>

<% end %>
</div>



<hr/>


<div class="noposts">


<%= link_to ("Skip for now"), root_path %>
</div>

</div>