<div class="span4 centered">
 <div class="twitterlogin">
 <div class="twitterbird">	
 <%= image_tag('http://i.imgur.com/LpDbTwS.png') %>
</div>
 <%= link_to "Sign up with Twitter", user_omniauth_authorize_path(:twitter), class: "twitterblue" %>
</div>
<div class="loginborder">

<div class="center">
<div class="logotext">
Sign up with email
</div>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name, input_html: { :class => "hello4" }, label: false,placeholder: "Name" %>
  <%= f.input :email, input_html: { :class => "hello4" }, label: false,placeholder: "Email" %>

  <%= f.input :password, input_html: { :class => "hello4" }, label: false,placeholder: "Password" %>
  <%= f.input :password_confirmation, input_html: { :class => "hello4" }, label: false, placeholder: "Password Confirmation"%>

  <div class="paddingbottom">
</div>
<%= f.submit "Sign Up", class: "favouritebuttonnoleft" %>

<div class="paddingtop">
<div class="lightcontainer">
By clicking "Sign Up" you indicate that you have read <br> and agree to the Terms of Service.
</div>	
</div>
</div>

<% end %>

<div class="logotext2">
Already have an account? <%= link_to ("Login"), new_user_session_path, class: "blue" %>
</div>
</div>
