<%= simple_form_for [@comment, Question.new] do |f| %>
 <p>
<div class="form">
  
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
  <%= f.full_error :image_content_type, class: "alert alert-error" %>


  <%= f.input :title, as: :text, input_html: { rows: "1", :style=> 'width: 90%', :class => "create" }, label: false, placeholder: "Personal" %>
  <%= f.input :body, as: :text, input_html: { rows: "10", :style=> 'width: 90%', :class => "create" }, label: false,placeholder: "Answer" %>
  <div class="titlecontainer3">
  Add an image (optional)
  <hr/>
  </div>
  <%= f.input :image, label: "Upload an image" %>
  <%= f.input :image_remote_url, label: false, placeholder: "Or a URL" %>
  </p>
 <p><%= f.submit "Answer", class: "btn btn-primary" %></p>
 </div>

  <% end %>
 
