
<%= simple_form_for [@comment, Question.new] do |f| %>
 <p>
<div class="form">
  <%= f.input :title, as: :text, input_html: { rows: "1", :style=> 'width: 90%' }, label: false, placeholder: "Something about you relevant to the answer" %>
  <%= f.input :body, as: :text, input_html: { rows: "10", :style=> 'width: 90%' }, label: false,placeholder: "Write Answer" %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
 
  <div class="titlecontainer3">
Add an image
<hr/>
</div>
  <%= f.input :image, label: "Upload an image" %>
  <%= f.input :image_remote_url, input_html: { rows: "1", :style=> 'width: 30%' }, label: false, placeholder: "Or a URL" %>
  <%= f.input :caption, as: :text, input_html: { rows: "1", :style=> 'width: 30%' }, label: false,placeholder: "Image description" %>
 <p><%= f.submit "Answer", class: "btn btn-primary" %></p>
 </div>

 
 <div class="besideform">
 
 </div>


 <% end %>
 
