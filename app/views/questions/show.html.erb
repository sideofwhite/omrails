<div class="visible-desktop hidden-phone hidden-tablet">

<div class="container">
 <div class="row">
 
<div class="span2">


<div class="circle">
<%= link_to (image_tag(@comment.user.image)), user_path(@comment.user) %>
</div>
<div class="greyevent">
<strong><%= link_to @comment.user.name, user_path(@comment.user) %> </strong>
<%= @comment.subtitle %>
</div>
</div>

<div class="span7">


<div class="titlecontainer">
<%= @question.body %>
</div>
<div class="lightcontainer">
<%= time_ago_in_words(@question.created_at) %> ago <br>
</div>

<% if @question.answers.count > 0 %>
fuck off
<% else %>

<% if current_user == @comment.user %>
<%= link_to ("Answer this question"), new_question_answer_path(@question) %>
<% end %>

<% end %>

</div>


<div class="span3">
<div class="eventimage">
<%= link_to (@comment.post.title), post_comment_path(@comment.post, @comment), class: "titlecontainershow" %>  
 <style media="screen">
  .eventimage::after { background-image: url(<%= @comment.post.image %>); background-size: cover;}
 </style>


 </div>

</div>







</div>
</div>
</div>


<div class="visible-phone hidden-desktop hidden-tablet">
<%= render 'comments/showphone' %>
</div>










