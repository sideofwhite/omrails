<div class="container">
 <div class="row">


<div class="fixed">
<div class="span4">
<div class="line2">
<div class="visible-desktop hidden-phone hidden-tablet">
<div class="commentimage">
  <%= image_tag @comment.post.image(:small) %>    
 </div>

<div class="info">
<div class="newspaper7"> 
<%= time_ago_in_words(@comment.post.created_at) %> ago <br>
</div>
</div>
<div class="info">
<div class="newspaper7"> 
<div class="blue">
<%= @comment.post.country %>
</div>
</div>
</div>

<div class="learnmore">
Summary
</div>
<div class="newspaper7"> 
<div class="descriptioncontainer2">
<%= @comment.post.description %>

</div>
</div>

</div>
</div>
</div>
</div>

<div class="span7 offset4">
<div class="titlecontainer4">
<%= @comment.post.title %>
</div>

<div class="titlecontainer">
<%= @comment.body %>
</div>
<div class="lightcontainer6">
 <%= time_ago_in_words(@comment.created_at) %> ago 
</div>

<hr />
<% if user_signed_in? %>
<div class="questioncontainer3">  
<%= link_to 'Answer', new_comment_question_path(@comment), class: "button4" %>
</div>
<% else %>
<div class="questioncontainer3">  
<%= link_to 'Answer', new_user_registration_path, class: "button4" %>
</div>
<% end %>
<% if @comment.questions.count == 1 %>
<div class="number">
<strong><%= @comment.questions.count %></strong> Answer
</div>
<% else %>
<div class="number">
<strong><%= @comment.questions.count %></strong> Answers
</div>
<% end %>


<%= render 'form' %>


</div>


</div>
</div>





