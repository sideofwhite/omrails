<div class="visible-desktop hidden-phone hidden-tablet">

<div class="container">
 <div class="row">


<div class="span1">

</div>




<div class="span6">


<div class="titlecontainer">
<%= @comment.body %>
</div>

<hr />
<% if user_signed_in? %>
<div class="questioncontainer3">  
<%= link_to 'Answer', new_comment_question_path(@comment), class: "button3" %>
</div>
<% else %>
<div class="questioncontainer3">  
<%= link_to 'Answer', new_user_registration_path, class: "button3" %>
</div>
<% end %>

<% if @comment.questions.count == 1 %>
<div class="number">
<strong><%= @comment.questions.count %></strong> Answer
</div>
<% else %>
<div class="number">
<strong><%= @comment.questions.count %></strong> Answers
</div>
<% end %>


<div class="row">
<div class="span5">
<div class="paddingtop">	
<%= render 'form' %>
</div>
<hr/>
</div>
</div>


<% @comment.questions.order("cached_votes_total desc").each do |question| %>
<div class="container">
 <div class="row">

<div class="span4">
<div class="info2">
<strong><%= question.user.name %></strong> <br>
<div class="blue">
<%= question.title %>
</div>
</div>
</div>
</div>
</div>
<hr/>



<%= question.body %><br><br>


<div class="upvotes">
<%= question.votes.size %> 
</div>
<% if user_signed_in? %>
<%= link_to (image_tag("http://i.imgur.com/yWWtsMN.png")), upvote_comment_question_path(@comment, question) %>
<% else %>
<%= link_to (image_tag("http://i.imgur.com/yWWtsMN.png")), new_user_registration_path %>
<% end %>



<div class="lightcontainer6">
 
Flag -
Posted <%= time_ago_in_words(question.created_at) %> ago <br>
</div>




<% if question.image? %>
 <%= image_tag question.image(:large) %>
 <div class="newspaper4">
 <div class="body">
 <div class="italic">
 <%= question.caption %>
</div>
</div>
</div>
<% end %>


<% if current_user.try(:admin?) %>
<div class="underanswercontainer2">
<%= link_to 'Edit', edit_comment_question_path(@comment, question) %>
<%= link_to 'Delete', comment_question_path(@comment, question), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<% end %>


<% end %>
</div>

<div class="span3 offset1">
<div class="commentimage2">
 <%= image_tag @comment.post.image(:small) %>    
 </div>

<div class="titlecontainerb">
<%= @comment.post.title %>
</div>
<hr/>


<%= @comment.post.description.split[0..50].join(" ") %>
<hr/>
</div>







</div>
</div>
</div>

<div class="visible-phone visible-tablet">
<div class="titlecontainer">
<%= @comment.body %>
</div>

<hr/>

<%= render 'form' %>

</div>


