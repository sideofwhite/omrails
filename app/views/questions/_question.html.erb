<div class="container">
<div class="row"> 


<div class="span1 offset1">
<div class="circle">
<%= link_to (image_tag(@comment.user.image)), user_path(@comment.user) %>
</div>
</div>

<div class="span7">

<strong><%= link_to @comment.user.name, user_path(@comment.user) %></strong> 

<%= @comment.subtitle %>


<div class="paddingtop"></div>


<div class="titlecontainer">
<%= link_to (@comment.title), post_comment_path(@comment.post, @comment) %>
</div>

<div class="paddingtop"></div>

<div class="blue">
<strong>Unanswered Questions</strong>
</div>

<% @questions.each do |question| %>
<% unless question.answer.present? %>
<div class="questionname">
<strong><%= link_to (question.user), user_path(question.user) %></strong> asks...
</div>

<div class="commentquestion">
<%= question.body %>
</div>

<% if @comment.user == current_user %>
<%= render :partial => "answers/form", locals: {question:question} %>
<% end %>

<% end %>
<% end %>

</div>

<div class="span3">
<div class="eventimage"> 
<%= image_tag @comment.post.image %>
<%= link_to (@comment.post.title), post_path(@comment.post), class: "titlecontainershow" %> 
</div>
</div>

</div>
</div>