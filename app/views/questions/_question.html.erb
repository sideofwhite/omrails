<div class="container">
<div class="row">
<div class="span2">
<div class="floatright">

 
</div>
</div>
<div class="span8">
<div class="questioncontainer2">
<%= @comment.body %>
</div>
</div>

</div>
</div>



<div class="span8 offset2">
<div class="row">
<hr />
<div class="questioncontainer3">  

<%= link_to 'Answer', new_comment_question_path(@comment), class: "button2" %>
</div>
<div class="number">
<%= @comment.questions.count %> Answers
</div>
</div>
</div>




<% @comment.questions.order("cached_votes_total desc").each do |question| %>
<% if question.votes.size > 0 %>
<div class="padding">
<div class="container">
<div class="row">
<div class="span2">
<div class="lightcontainer3">
Verified Answer
</div>
<div class="verifiedanswer">
 <div class="green"> 
<%= question.user.name %>
</div>  
  <div class="blue">
<%= question.title %><br>
  </div>
</div>
</div>

<div class="span8"> 
<div class="body">
<%= question.body %>
</div>

<div class="underanswercontainer2">
 
Flag -
Posted <%= time_ago_in_words(question.created_at) %> ago <br>
</div>
<hr />
</div>
</div>
</div>
</div>




<% else %>
 <div class="padding">
<div class="container">
<div class="row">
<div class="span2">
<div class="answercontainer2">
<%= question.user.name %>
<div class="blue">
  <%= question.title %><br>
  </div>
</div>
</div>
  
  




 <div class="span8">

 <div class="body">
 <%= question.body %>

</div>
<div class="underanswercontainer2">
Flag -
Posted <%= time_ago_in_words(question.created_at) %> ago
</div>
<hr />
</div>
</div>
</div>

<% end %>



<% if current_user.try(:admin?) %>
<div class="underanswercontainer2">
<%= link_to "Upvote", upvote_comment_question_path(@comment, question) %>
<%= link_to 'Edit', edit_comment_question_path(@comment, question) %>
<%= link_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<% end %>
<% end %>






