
<div class="span8 offset1">
<div class="questioncontainer2">
<%= @comment.body %>
</div>
</div>






<div class="span8 offset1">

<hr />
<div class="questioncontainer3">  
<%= link_to 'Answer', new_comment_question_path(@comment), class: "button2" %>
</div>
<div class="number">
<%= @comment.questions.count %> Answers
</div>
</div>





<% @comment.questions.order("cached_votes_total desc").each do |question| %>
<div class="span8 offset1"> 
<% if question.votes.size > 0 %>

<div class="floatright">
<%= image_tag('http://i.imgur.com/4Iq16fx.png') %>
<div class="lightcontainer4">
Verified Answer
</div>
</div>

<div class="verifiedanswer">
 <div class="info">
 
<%= question.user.name %>
</div> 

  <div class="blue">
<div class="info">
<%= question.title %><br>
  </div>
  </div>
</div>



<div class="padding">
<div class="body">
<%= question.body %>
</div>
</div>
<div class="underanswercontainer2">
 
Flag -
Posted <%= time_ago_in_words(question.created_at) %> ago <br>
</div>
<hr />








<% else %>


<div class="answercontainer2">
 <div class="info">
 <%= question.user.name %>
 </div> 
  <div class="blue">
<div class="info">
<%= question.title %><br>
  </div>
  </div>
</div>




<div class="padding">
<div class="body">
<%= question.body %>
</div>
</div>

<div class="underanswercontainer2">
 
Flag -
Posted <%= time_ago_in_words(question.created_at) %> ago <br>
</div>
<hr />




<% end %>

</div>

<% if current_user.try(:admin?) %>
<div class="underanswercontainer2">
<%= link_to "Upvote", upvote_comment_question_path(@comment, question) %>
<%= link_to 'Edit', edit_comment_question_path(@comment, question) %>
<%= link_to 'Delete', comment_question_path(@comment, question), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<% end %>
<% end %>






