

<%= render 'users/userhead' %>
<div class="row"></div>
<div class="profilemargintop">
</div>

<div class="width6">

<div class="width50">
<div class="floatrightprofile">	

<div class="abovenumber">
Upvotes
</div>
<div class="belownumber">	
<%= @questions.count %>
</div>

</div>
</div>


<div class="width50">
<%= link_to userinterviews_path(@user) do %>
<div class="floatleftprofile">	
<div class="abovenumber">	
Answers
</div>
<div class="belownumber">	
<%= @comment.count %>
</div>
</div>
<% end %>
<div class="profilemargin5">
</div>
</div>

<div class="row"></div>
<hr class="userlineunder"/>


<% if @user.votes.count == 0 %>
<div class="center">
<div class="eventmargin2">
<%= @user.name %> hasn't upvoted any answers.
</div>
</div>

<% end %>



<% @questions.each_with_index do |question, i| %>


<div class="experimentname">
<strong><%= link_to (question.user.name), user_path(question.user) %></strong> 
<% if question.title.present? %>
 | <%= truncate(question.title, :separator => ' ', length: 55) %>
<% end %>
</div>	

<div class="row"></div>

<div class="titlecontainer30">
<%= link_to (question.comment.title), post_comment_path(question.comment.post, question.comment) %>

</div>

<div class="p2">	
 
    <%= truncate(question.body, :separator => ' ', length: 250) %>
    <%= link_to ("Read More"), post_comment_path(question.comment.post, question.comment) + "#question_#{question.id.to_s}", class: "readmore" %>

</div>


<hr/>

<% end %>












