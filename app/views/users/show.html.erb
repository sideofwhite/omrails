<div class="visible-desktop hidden-phone hidden-tablet">

<div class="span7 centered">
<% if current_user == @user %>


<div class="floatright">
<%= link_to "Settings", edit_user_registration_path(@user), class: "greymargin" %>	<%= link_to "Logout", destroy_user_session_path, method: :delete %>
</div>
<% end %>
</div>



<div class="span4 centered">	
<% if @user.image? %>	
<div class="userimage">
<%= image_tag @user.image %>
</div>
<% end %>
<div class="usernametext2">	
<%= @user.name %>
</div>

<div class="paddingtop"></div>

<div class="center">
<% if @user.twitter.present? or @user.place.present? %>
<%= @user.twitter %>
<%= @user.place %>
<% end %>
<div class="commentquestionmargin"></div>



</div>
</div>







<div class="span7 centered">



<div class="hrevent"></div>

<div class="redtopline">	
Upvoted
</div>
<%= link_to "Questions", userquestions_path(@user), class: "eventtoptext4" %>
<%= link_to "Interviews", userinterviews_path(@user), class: "eventtoptext4" %>



<div class="mobilepadding20"></div>

<% if @user.votes.count == 0 %>
<div class="center">
<div class="eventmargin2">
<%= @user.name %> hasn't upvoted any answers yet.
</div>
</div>
<% end %>

<% @questions.each_with_index do |question, i| %>

<% if question.comment.post.present? %>
<div class="sixty"></div>
<%= link_to post_comment_path(question.comment.post, question.comment) do %>
  <div class="interviewgrey">
  <%= question.comment.user.name %> on <%= question.comment.post.title %>
</div>
<% end %>

<% end %>

<div class="twenty"></div>

<div class="attempt">
<div class="commentquestion">
<%= question.body %>
</div>
</div>

<div class="commentmargin10"></div>

<% if question.answer.present? %>

<p>	
 <% if question.answer.body.length > 150 %>
    <%= truncate(question.answer.body, :separator => ' ', length: 250) %>
    <%= link_to_function '(Read more...)', "$(this).parent().html('#{escape_javascript question.answer.body}')", class: "blue" %>
  <% else %>
    <%= question.answer.body %>

  <% end %>
  <div class="lightcontainercomment2">
<%= time_ago_in_words(question.answer.created_at) %> ago
</div>
</p>

<% unless (i + 1) == @questions.length %>
<hr6/>
<% end %>

<% end %>
<% end %>

<div class="commentquestionmargin"></div>

<% if @user.votes.count > 5 %>
<%= link_to "See all...", upvoted_path(@user), class: "favouritebuttonleft", id: "new_link", :remote => true %>
<% end %>
</div>
</div>

<div class="visible-phone hidden-tablet hidden-desktop">
<%= render 'users/showmobile' %>
</div>

<div class="visible-tablet hidden-phone hidden-desktop">
<%= render 'users/showtablet' %>
</div>






